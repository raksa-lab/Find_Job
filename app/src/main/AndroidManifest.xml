<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_companylogo_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_companylogo_round_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Find_Job">

        <activity
            android:name=".Auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Auth.RegisterActivity"
            android:exported="true" />

        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- Job Detail Screen -->
        <activity
            android:name=".ui.job_detail.JobDetailActivity"
            android:exported="false" />

        <!-- â­ REQUIRED: Application list screen -->
        <activity
            android:name=".ui.application.AppliedJobsActivity"
            android:exported="false" />

    </application>

</manifest>
