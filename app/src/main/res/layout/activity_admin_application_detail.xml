<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- HEADER CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- JOB TITLE -->
                <TextView
                    android:id="@+id/tvJobTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senior Android Developer"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"/>

                <!-- STATUS BADGE -->
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#F59E0B"
                    android:background="@drawable/status_badge_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginTop="12dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- USER MESSAGE CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Message"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#1A1A1A"/>

                <TextView
                    android:id="@+id/tvUserNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I am very interested in this position and believe my 5 years of experience in Android development would be a great fit for your team."
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="12dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ADMIN REPLY CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Reply"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#1A1A1A"/>

                <TextView
                    android:id="@+id/tvAdminReply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No reply yet"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="12dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CV VIEWER CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/job_icon_background"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_document"
                        app:tint="#EF4444"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CV"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PDF Document"
                        android:textSize="13sp"
                        android:textColor="#999999"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewCv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View"
                    android:textSize="14sp"
                    style="@style/Widget.Material3.Button.TonalButton"
                    app:cornerRadius="12dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ACTION BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <!-- Reply Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReply"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Reply to Applicant"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeWidth="2dp"
                app:cornerRadius="12dp"/>





        </LinearLayout>

    </LinearLayout>

</ScrollView>