<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:strokeWidth="0dp"

    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Section: Checkbox + Company Logo + Job Info + Bookmark -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:paddingBottom="16dp">

            <!-- SELECT CHECKBOX -->
            <CheckBox
                android:id="@+id/cbSelect"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:visibility="gone"
                android:focusable="false"
                android:clickable="true" />


            <!-- Company Logo -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logo_container"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_toEndOf="@id/cbSelect"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0">

                <ImageView
                    android:id="@+id/ivCompanyLogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_company_placeholder"
                    android:scaleType="centerCrop"
                    android:padding="12dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Job Info Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/logo_container"
                android:layout_toStartOf="@id/bookmark_button"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:layout_centerVertical="true">

                <!-- Job Title -->
                <TextView
                    android:id="@+id/tvJobTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senior Product Designer"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#1A1A1A"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:letterSpacing="0.01" />

                <!-- Company Name -->
                <TextView
                    android:id="@+id/tvCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google Inc."
                    android:textColor="#616161"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Bookmark Button -->
            <FrameLayout
                android:id="@+id/bookmark_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_bookmark_button"
                android:clickable="true"
                android:focusable="true"
                android:descendantFocusability="afterDescendants"
                android:foreground="?attr/selectableItemBackgroundBorderless">


            <ImageView
                    android:id="@+id/ivBookmark"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_bookmark_border"
                    app:tint="#6C63FF" />
            </FrameLayout>
        </RelativeLayout>

        <!-- Middle Section: Tags + Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="16dp">

            <!-- Location -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    app:tint="#9E9E9E" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="San Francisco, CA"
                    android:textColor="#757575"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

            <!-- Tags Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Salary Tag -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_tag_salary"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_money_small"
                        app:tint="#4CAF50" />

                    <TextView
                        android:id="@+id/tvSalary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$5k/mo"
                        android:textColor="#4CAF50"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- Job Type Tag -->
                <TextView
                    android:id="@+id/tvJobType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full-Time"
                    android:textSize="12sp"
                    android:textColor="#6C63FF"
                    android:textStyle="bold"
                    android:background="@drawable/bg_tag_job_type"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginEnd="8dp" />

                <!-- Experience Tag -->
                <TextView
                    android:id="@+id/tvExperience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senior"
                    android:textSize="12sp"
                    android:textColor="#FF9800"
                    android:textStyle="bold"
                    android:background="@drawable/bg_tag_experience"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Section: Requirements or Skills -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Requirements:"
                android:textSize="12sp"
                android:textColor="#9E9E9E"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRequirementsSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="5+ yrs exp, Figma, Design Systems"
                android:textColor="#616161"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="end" />
        </LinearLayout>

        <!-- Accent Bar at Bottom -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/gradient_accent_bar" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>