<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:elevation="4dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|snap"
            app:contentScrim="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:paddingBottom="24dp"
                app:layout_collapseMode="parallax">

                <!-- Header with Back Button -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="48dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="20dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btn_back"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E0E0E0"
                        app:cardBackgroundColor="@android:color/white">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_arrow_back"
                            android:clickable="true"
                            android:focusable="true"
                            app:tint="#1A1A1A" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Job Details"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:letterSpacing="-0.01" />

                </RelativeLayout>

                <!-- Company Info Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:gravity="center_vertical">

                    <!-- Company Logo -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#F0F0F0"
                        app:cardBackgroundColor="@android:color/white">

                        <ImageView
                            android:id="@+id/ivCompanyLogo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:scaleType="centerCrop"
                            android:contentDescription="Company Logo"
                            android:src="@drawable/ic_company_placeholder"/>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Company Name and Location -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/tvCompany"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tech Innovations Inc."
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:letterSpacing="-0.01" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_location"
                                app:tint="#8E8E93" />

                            <TextView
                                android:id="@+id/tvLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="San Francisco, CA"
                                android:textSize="13sp"
                                android:textColor="#8E8E93"
                                android:layout_marginStart="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="24dp">

            <!-- Job Title Section -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Senior Product Designer"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#6C63FF"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <!-- Tags with Chips -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:singleLine="false"
                app:chipSpacing="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipWorkType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remote"
                    android:textColor="#6C63FF"
                    app:chipBackgroundColor="#F0EDFF"
                    app:chipStrokeWidth="0dp"
                    app:chipCornerRadius="8dp"
                    android:textSize="13sp"
                    app:chipMinHeight="32dp"
                    style="@style/Widget.MaterialComponents.Chip.Choice"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipEmploymentType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full-time"
                    android:textColor="#4CAF50"
                    app:chipBackgroundColor="#E8F5E9"
                    app:chipStrokeWidth="0dp"
                    app:chipCornerRadius="8dp"
                    android:textSize="13sp"
                    app:chipMinHeight="32dp"
                    style="@style/Widget.MaterialComponents.Chip.Choice"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipExperience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senior"
                    android:textColor="#FF9800"
                    app:chipBackgroundColor="#FFF3E0"
                    app:chipStrokeWidth="0dp"
                    app:chipCornerRadius="8dp"
                    android:textSize="13sp"
                    app:chipMinHeight="32dp"
                    style="@style/Widget.MaterialComponents.Chip.Choice"/>
            </com.google.android.material.chip.ChipGroup>

            <!-- Quick Stats Grid -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:weightSum="3">

                    <!-- Salary -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_money"
                            app:tint="#6C63FF" />

                        <TextView
                            android:id="@+id/tvSalaryAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$120k"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salary"
                            android:textSize="12sp"
                            android:textColor="#8E8E93"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="#F0F0F0" />

                    <!-- Posted Date -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_clock"
                            app:tint="#4CAF50" />

                        <TextView
                            android:id="@+id/tvPostedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2d ago"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Posted"
                            android:textSize="12sp"
                            android:textColor="#8E8E93"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="#F0F0F0" />

                    <!-- Applicants -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_person"
                            app:tint="#FF9800" />

                        <TextView
                            android:id="@+id/tvApplicants"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="47"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Applicants"
                            android:textSize="12sp"
                            android:textColor="#8E8E93"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Description Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- About the Role -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About the Role"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#6C63FF"
                        android:letterSpacing="-0.01" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textSize="15sp"
                        android:textColor="#4A4A4A"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginTop="12dp" />

                    <!-- Requirements Section -->
                    <TextView
                        android:id="@+id/tvRequirementsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Requirements"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginTop="24dp" />

                    <TextView
                        android:id="@+id/tvRequirements"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textSize="15sp"
                        android:textColor="#4A4A4A"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginTop="12dp" />

                    <!-- Skills Section -->
                    <TextView
                        android:id="@+id/tvSkillsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skills"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800"
                        android:layout_marginTop="24dp" />

                    <TextView
                        android:id="@+id/tvSkills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textSize="15sp"
                        android:textColor="#4A4A4A"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginTop="12dp" />

                    <!-- Benefits Section -->
                    <TextView
                        android:id="@+id/tvBenefitsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Benefits"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FF6B6B"
                        android:layout_marginTop="24dp" />

                    <TextView
                        android:id="@+id/tvBenefits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textSize="15sp"
                        android:textColor="#4A4A4A"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginTop="12dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApply"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Apply Now"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0"
                app:cornerRadius="12dp"
                app:backgroundTint="#6C63FF"
                android:layout_marginBottom="12dp"
                app:icon="@drawable/ic_send"
                app:iconGravity="textEnd"
                app:iconPadding="8dp"
                android:elevation="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewStatus"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:layout_marginEnd="6dp"
                    android:text="View Status"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:cornerRadius="12dp"
                    app:strokeColor="#6C63FF"
                    app:strokeWidth="1.5dp"
                    android:textColor="#6C63FF"
                    app:icon="@drawable/ic_eye"
                    app:iconTint="#6C63FF"
                    app:iconGravity="textStart"
                    app:iconSize="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:layout_marginStart="6dp"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:cornerRadius="12dp"
                    app:strokeColor="#D0D0D0"
                    app:strokeWidth="1.5dp"
                    android:textColor="#757575"
                    app:icon="@drawable/ic_bookmark"
                    app:iconTint="#757575"
                    app:iconGravity="textStart"
                    app:iconSize="20dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button for Share -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@drawable/ic_share"
        app:layout_anchor="@id/appBarLayout"
        app:layout_anchorGravity="bottom|end"
        app:tint="@android:color/white"
        app:backgroundTint="#6C63FF"
        app:elevation="6dp"
        app:borderWidth="0dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>