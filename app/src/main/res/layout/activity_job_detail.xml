<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@drawable/gradient_header"
            app:expandedTitleMarginStart="24dp"
            app:expandedTitleMarginBottom="28dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_header"
                app:layout_collapseMode="parallax">

                <!-- Decorative circles -->
                <View
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-40dp"
                    android:layout_marginEnd="-40dp"
                    android:background="@drawable/bg_circle_white"
                    android:alpha="0.1"/>

                <View
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="-20dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/bg_circle_white"
                    android:alpha="0.08"/>

                <!-- BACK BUTTON -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_back"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginStart="16dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#40FFFFFF">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_back"
                        android:clickable="true"
                        android:focusable="true"
                        app:tint="@android:color/white" />
                </com.google.android.material.card.MaterialCardView>

                <!-- COMPANY LOGO -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="@android:color/white">

                    <ImageView
                        android:id="@+id/ivCompanyLogo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Company Logo"
                        android:src="@drawable/ic_company_placeholder"/>
                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Job Title Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Senior Product Designer"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="2dp" />

                    <!-- Company Info Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_building"
                                    app:tint="#6C63FF" />

                                <TextView
                                    android:id="@+id/tvCompany"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tech Innovations Inc."
                                    android:textSize="15sp"
                                    android:textColor="#2C2C2C"
                                    android:layout_marginStart="8dp"
                                    android:fontFamily="sans-serif-medium" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_location"
                                    app:tint="#FF6B6B" />

                                <TextView
                                    android:id="@+id/tvLocation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="San Francisco, CA"
                                    android:textSize="14sp"
                                    android:textColor="#6B6B6B"
                                    android:layout_marginStart="6dp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Tags with Chips -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:singleLine="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipWorkType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remote"
                            android:textColor="#6C63FF"
                            app:chipBackgroundColor="#F0EDFF"
                            app:chipStrokeWidth="0dp"
                            app:chipCornerRadius="12dp"
                            android:textSize="13sp"
                            style="@style/Widget.MaterialComponents.Chip.Choice"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipEmploymentType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full-time"
                            android:textColor="#4CAF50"
                            app:chipBackgroundColor="#E8F5E9"
                            app:chipStrokeWidth="0dp"
                            app:chipCornerRadius="12dp"
                            android:textSize="13sp"
                            style="@style/Widget.MaterialComponents.Chip.Choice"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipExperience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Senior"
                            android:textColor="#FF9800"
                            app:chipBackgroundColor="#FFF3E0"
                            app:chipStrokeWidth="0dp"
                            app:chipCornerRadius="12dp"
                            android:textSize="13sp"
                            style="@style/Widget.MaterialComponents.Chip.Choice"/>
                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Stats Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:weightSum="3">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center">

                        <View
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_tag_purple"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="-36dp"
                            android:src="@drawable/ic_money"
                            app:tint="#6C63FF" />

                        <TextView
                            android:id="@+id/tvSalaryAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$120k"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salary"
                            android:textSize="11sp"
                            android:textColor="#8E8E93"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center">

                        <View
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_tag_green"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="-36dp"
                            android:src="@drawable/ic_clock"
                            app:tint="#4CAF50" />

                        <TextView
                            android:id="@+id/tvPostedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2d ago"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Posted"
                            android:textSize="11sp"
                            android:textColor="#8E8E93"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center">

                        <View
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_tag_orange"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="-36dp"
                            android:src="@drawable/ic_person"
                            app:tint="#FF9800" />

                        <TextView
                            android:id="@+id/tvApplicants"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="47"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Applicants"
                            android:textSize="11sp"
                            android:textColor="#8E8E93"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Description Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- About the Role -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="@drawable/gradient_accent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About the Role"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginStart="12dp"
                            android:letterSpacing="-0.01" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textSize="15sp"
                        android:textColor="#424242"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginTop="20dp" />

                    <!-- Requirements Section -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="28dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="@drawable/gradient_accent" />

                        <TextView
                            android:id="@+id/tvRequirementsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Requirements"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvRequirements"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textSize="15sp"
                        android:textColor="#424242"
                        android:lineSpacingExtra="8dp"
                        android:layout_marginTop="16dp" />

                    <!-- Skills Section -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="28dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="@drawable/gradient_accent" />

                        <TextView
                            android:id="@+id/tvSkillsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Skills"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSkills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textSize="15sp"
                        android:textColor="#424242"
                        android:lineSpacingExtra="8dp"
                        android:layout_marginTop="16dp" />

                    <!-- Benefits Section -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="28dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="@drawable/gradient_accent" />

                        <TextView
                            android:id="@+id/tvBenefitsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Benefits"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvBenefits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textSize="15sp"
                        android:textColor="#424242"
                        android:lineSpacingExtra="8dp"
                        android:layout_marginTop="16dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApply"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Apply Now"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.01"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/primary"
                android:layout_marginBottom="12dp"
                app:icon="@drawable/ic_send"
                app:iconGravity="textEnd"
                app:iconPadding="8dp"
                android:elevation="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewStatus"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:layout_marginEnd="8dp"
                    android:text="View Status"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:cornerRadius="16dp"
                    app:strokeColor="#6C63FF"
                    app:strokeWidth="2dp"
                    android:textColor="#6C63FF"
                    app:icon="@drawable/ic_eye"
                    app:iconTint="#6C63FF"
                    app:iconGravity="textStart"
                    app:iconSize="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:cornerRadius="16dp"
                    app:strokeColor="#BDBDBD"
                    app:strokeWidth="2dp"
                    android:textColor="#757575"
                    app:icon="@drawable/ic_bookmark"
                    app:iconTint="#757575"
                    app:iconGravity="textStart"
                    app:iconSize="20dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button for Share -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@drawable/ic_share"
        app:layout_anchor="@id/appBarLayout"
        app:layout_anchorGravity="bottom|end"
        app:tint="@android:color/white"
        app:backgroundTint="#6C63FF"
        app:elevation="8dp"
        app:borderWidth="0dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>