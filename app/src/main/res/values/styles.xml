<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Find_Job" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/chip_text_selected</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorSecondary">@color/primary_light</item>

        <!-- Text colors that go ON TOP of the primary and secondary colors -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Other theme attributes -->
        <item name="colorError">@color/find_job_error</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>
